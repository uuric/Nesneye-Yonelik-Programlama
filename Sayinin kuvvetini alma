
package javaapplication1;
import java.util.*;

/*
  *@author Uğur Işıkcevahir / 170202138
 */
 
public class JavaApplication1 {

  
    public static void main(String[] args) {

        Scanner scan=new Scanner(System.in);
        
        System.out.println("Bir sayi giriniz: ");
        double a=scan.nextInt();
        
        System.out.println("Kuvvet sayisini giriniz: ");
        double b=scan.nextInt();
        
        // Birinci yöntem (Uzun yoldan çözüm);
        double sonuc=1;
                
        for (int i=0; i<b ; i++){
            sonuc=sonuc*a;
        }
        
        System.out.println(a+ " üzeri "+b+" = "+sonuc);
        
        
        //Diger yontem ise Math.pow komutu kullanmaktir.
        sonuc=0;
        sonuc=Math.pow(a, b);
        System.out.println(a+" uzeri "+b+" = "+sonuc);
              
    }
    
}
